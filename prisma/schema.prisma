generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"

}

model User{
   id String @id @default(cuid())
   email String @unique
   name String?
      bookings Booking[]

   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
}

model BarbeShop{
   id String @id @default(cuid())
   name String
   address String
   bookings Booking[]
   description String?
  imageUrl String?
   phone String
   createdAt DateTime @default(now())
   updatedAt DateTime @updatedAt
   services BarbeShopService[]  
}

model BarbeShopService{
    id String @id @default(cuid())
    barbeShopId String
    name String
    description String?
    price Decimal @db.Decimal(10, 2)
    durationInMinutes Int
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
       bookings Booking[]

    imageUrl String?
    barbeshop BarbeShop @relation(fields: [barbeShopId], references: [id], onDelete: Cascade)
}

model Booking{
  id String @id @default(cuid())
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  barbeShopId String
  barbeShop BarbeShop @relation(fields: [barbeShopId], references: [id], onDelete: Cascade)
  serviceId String
  service BarbeShopService @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  appointmentDate DateTime
  date DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}