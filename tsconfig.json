{
  "compilerOptions": {
    /* Base */
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    /* Next / TS behavior */
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,

    /* Module system (Next modern) */
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    /* Interop / type noise reduction */
    "esModuleInterop": true,
    "skipLibCheck": true,

    /* JS handling (mantenha true se vocÃª tem arquivos .js no projeto) */
    "allowJs": true,

    /* Next plugin */
    "plugins": [
      {
        "name": "next"
      }
    ],

    /* Path aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@prisma-generated/*": ["./prisma/generated/*"]
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "prisma/**/*.ts",
    ".next/types/**/*.ts"
  ],

  "exclude": ["node_modules"]
}
